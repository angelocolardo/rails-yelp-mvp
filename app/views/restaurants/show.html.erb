<h1>Restaurants#show</h1>
<p>Find me in app/views/restaurants/show.html.erb</p>

<h1><strong><%= @restaurant.name %></strong></h1>
<h2><%= @restaurant.address %></h2>
<h3><em><%= @restaurant.category %></em></h3>
<h4><%= @restaurant.phone_number %></h4>
<div>
  <% @restaurant.reviews.each do |review| %>
  <h4><em><strong><%= review.content %></strong></em></h4>
  <p>Rating: <%= review.rating %> </p>
<% end %>
</div>

<p><%= link_to "Add a review to this Restaurant", new_restaurant_review_path(@restaurant) %></p>

<%= link_to "Go Back", restaurants_path %>
